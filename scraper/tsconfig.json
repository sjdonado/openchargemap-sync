{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "build",
    "lib": ["es2022"],
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
